<div class="container flashcard-edit">
  <% if can? :update, @card_set %>
    <div class="row">
      <h1>Edit flashcard</h1>

      <div class="col-sm-8">
        <%= form_for(@card_set) do |f| %>
          <%= render "card_set_form", f: f %>
          <%= f.submit "Save Changes", class: "form-control btn btn-flash mt-10" %>
        <% end %>
      </div>
    </div>
  <% else %>
    <p>You can't edit a card set that you didn't create!</p>
  <% end %>
</div>