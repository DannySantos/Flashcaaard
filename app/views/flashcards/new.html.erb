<main class="container flashcard-new">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Create a new flashcard</h1>

      <% if current_user %>
        <div class="row">
          <div class="col-sm-8">
            <%= form_for(@flashcard) do |f| %>
              <%= render "flashcard_form", f: f %>
              <%= f.submit "Create Flashcard", class: "form-control btn btn-flash mt-10" %>
            <% end %>
          </div>
          
          <div class="instructions col-sm-4">
            <h3>Formatting</h3>
            
            <ul class="pl-15">
              <li><i>Indent code 4 spaces</i></li>
              <li><i>Backticks for inline code <span class="code-inline">`like_this`</span></i></li>
              <li><i>_italic_</i></li>
              <li><b>**bold**</b></li>
            </ul>
          </div>
        </div>
      <% else %>
        <h2>You have log in or register to create a new flashcard!</h2>

        <%= render '/application/devise_forms' %>
      <% end %>
    </div>
  </div>
</main>